{
    "name": "pho-vscode-version-selector",
    "displayName": "pho-vscode-version-selector",
    "description": "Allows the user to open files in specific installations of VSCode",
    "version": "0.0.1",
    "publisher": "phohale",
    "engines": {
        "vscode": "^1.98.0"
    },
    "categories": [
        "Other"
    ],
	"repository": {
		"type": "git",
		"url": "https://github.com/CommanderPho/pho-vscode-version-selector"
	},
    "activationEvents": [
        "onCommand:extension.sayHello"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.sayHello",
                "title": "Hello World"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
		"@types/node": "^20.17.24",
		"@types/vscode": "^1.98.0",
		"@vscode/test-electron": "^2.4.1",
		"@vscode/vsce": "^3.3.0",
		"path": "^0.12.7",
		"typescript": "^5.8.2"
    }
}
